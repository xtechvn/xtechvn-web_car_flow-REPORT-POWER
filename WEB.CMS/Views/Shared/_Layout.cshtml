        // Menu Accordion Logic
        $(document).ready(function() {
            // Handle click on the 'click' span (arrow)
            $('.menu-left .accordion-item .click').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                var $this = $(this);
                var $parent = $this.closest('.accordion-item');
                var $submenu = $parent.find('.level2');
                
                // Toggle open class on arrow
                $this.toggleClass('open');
                
                // Toggle submenu visibility
                $submenu.slideToggle(300);
            });
            
            // Also handle click on the parent link itself to toggle if it has a submenu
            $('.menu-left .accordion-item > a').on('click', function(e) {
                var $this = $(this);
                var $parent = $this.closest('.accordion-item');
                var $arrow = $parent.find('.click');
                var $submenu = $parent.find('.level2');
                
                // If there is a submenu
                if ($submenu.length > 0) {
                     // Check if the link goes somewhere or just toggles
                     // If href is empty or # or equals javascript:;, treat as toggle
                     var href = $this.attr('href');
                     if (!href || href === '#' || href === 'javascript:;') {
                         e.preventDefault();
                         $arrow.toggleClass('open');
                         $submenu.slideToggle(300);
                     } else {
                         // Optional: Expand if active
                         $('.menu-left .accordion-item > a.active').each(function() {
                             var $p = $(this).closest('.accordion-item');
                             $p.find('.click').addClass('open');
                             $p.find('.level2').show();
                         });
                     }
                }
            });
            
            // Initialize: Open submenus for active items
            $('.menu-left .level2 li a.active').each(function() {
                var $submenu = $(this).closest('.level2');
                var $parentItem = $submenu.closest('.accordion-item');
                
                $submenu.show();
                $parentItem.find('.click').addClass('open');
                $parentItem.find('> a').addClass('active'); // Highlight parent if child is active
            });

            // Toggle Menu Collapse
            $('.menu-left .btn_control_menu').on('click', function(e) {
                e.preventDefault();
                $('.menu-left').toggleClass('collapsed');
                
