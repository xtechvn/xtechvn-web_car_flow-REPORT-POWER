        /* chỉ áp dụng cho dropdown của nút cài đặt */
        .settings-dropdown {
            position: relative;
            display: inline-block;
        }

        .settings-btn {
            background: #fff;
            border: 1px solid #ccc;
            padding: 6px;
            border-radius: 6px;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: background 0.2s ease;
        }

            .settings-btn:hover {
